<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/img_cart_product"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/iphone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_cart_product_name"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/txt_cart_product_name"
                android:textSize="20sp"
                android:textColor="@color/bg_black"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <Button
                android:id="@+id/btn_delete_product"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/close"
                android:background="@null"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_margin="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_cart_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mota"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_cart_product_price"
                android:textSize="20sp"
                android:textColor="@color/bg_red"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_cart_product_sale_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/bg_black"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_cart_product_price_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_cart_product_price"
            android:textSize="20sp"
            android:textColor="@color/bg_red"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_cart_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_minus"
                android:textSize="20sp"
                android:background="@color/bg_gray_light"/>

            <TextView
                android:id="@+id/tv_cart_product_count"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/bg_black"
                android:textSize="20sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_cart_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="@string/txt_plus"
                android:textSize="20sp"
                android:background="@color/bg_gray_light"/>

            <Button
                android:id="@+id/btn_cart_detail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/detail"
                android:background="@null"
                android:textSize="20sp"
                android:textColor="@color/bg_blue_light"
                android:gravity="end"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>