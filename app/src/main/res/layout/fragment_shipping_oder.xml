<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AllOderFragment"
    android:orientation="vertical"
    android:background="@color/bg_gray_invisible">

    <ListView
        android:id="@+id/lv_shipping_order_fragment_pending_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
        android:divider="@color/bg_gray_invisible"/>

    <RelativeLayout
        android:id="@+id/layout_notice_order_empty_shipping_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_order_empty"
            android:layout_centerInParent="true"
            android:textSize="26sp"
            android:textColor="@color/bg_black"
            />
    </RelativeLayout>

</LinearLayout>